<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- Custom output name -->
		<AssemblyName>$(Platform)-lib-TimerController</AssemblyName>


		<!-- Platforms -->
		<Platforms>AnyCPU;ARM64;x64;x86</Platforms>

		<!-- Metadata -->
		<RootNamespace>TimerController</RootNamespace>
		<Title>TimerController Utilities</Title>
		<Description>Provides timer control utilities for .NET applications.</Description>
		<Company>Jakub Kopiszka</Company>
		<Product>Timer Controller</Product>
		<Authors>Jakub Kopiszka</Authors>
		<Version>1.0.0</Version>
		<FileVersion>1.0.0.0</FileVersion>
		
		<!-- build number -->
		<InformationalVersion>1.0.0-beta</InformationalVersion>
		<AssemblyVersion>1.0.0</AssemblyVersion>
	</PropertyGroup>
</Project>
